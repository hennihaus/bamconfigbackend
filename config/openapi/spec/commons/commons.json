{
  "openapi": "3.0.3",
  "info": {
    "title": "BAM Business Integration - Shared Stuff",
    "version": "1.0.0"
  },
  "paths": {},
  "components": {
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Unique"
            },
            "example": {
              "isUnique": true
            }
          }
        }
      },
      "204": {
        "description": "No Content",
        "content": {
          "text/plain": {}
        }
      },
      "400": {
        "description": "Invalid Request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Errors"
            },
            "example": {
              "reasons": [
                {
                  "exception": "RequestValidationException",
                  "message": "uuid must have valid uuid format"
                }
              ],
              "dateTime": "2022-01-31T07:43:30"
            }
          }
        }
      },
      "404": {
        "description": "Not Found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Errors"
            },
            "example": {
              "reasons": [
                {
                  "exception": "NotFoundException",
                  "message": "resource not found"
                }
              ],
              "dateTime": "2022-01-31T07:43:30"
            }
          }
        }
      },
      "409": {
        "description": "Conflict in Database",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Errors"
            },
            "example": {
              "reasons": [
                {
                  "exception": "TransactionException",
                  "message": "could not serialize access due to concurrent update"
                }
              ],
              "dateTime": "2022-01-31T07:43:30"
            }
          }
        }
      },
      "500": {
        "description": "Internal Server Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Errors"
            },
            "example": {
              "reasons": [
                {
                  "exception": "Exception",
                  "message": "internal server error"
                }
              ],
              "dateTime": "2022-01-31T07:43:30"
            }
          }
        }
      }
    },
    "schemas": {
      "Unique": {
        "type": "object",
        "required": [
          "isUnique"
        ],
        "properties": {
          "isUnique": {
            "type": "boolean"
          }
        }
      },
      "Errors": {
        "type": "object",
        "required": [
          "reasons",
          "dateTime"
        ],
        "properties": {
          "reasons": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Reason"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "dateTime": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Reason": {
        "required": [
          "exception",
          "message"
        ],
        "properties": {
          "exception": {
            "type": "string",
            "minLength": 1
          },
          "message": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}