{
  "openapi": "3.0.3",
  "info": {
    "title": "BAM Business Integration - Team API",
    "contact": {
      "name": "Jan-Hendrik Hausner",
      "email": "jan-hendrik.hausner@outlook.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://github.com/hennihaus/bamconfigbackend/blob/master/LICENSE"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/v1",
      "description": "Base-URL"
    }
  ],
  "tags": [
    {
      "name": "Team"
    }
  ],
  "paths": {
    "/teams": {
      "get": {
        "tags": [
          "Team"
        ],
        "operationId": "getAllTeams",
        "summary": "Gets all teams",
        "parameters": [
          {
            "$ref": "../commons/commons.json#/components/parameters/cursorParameter"
          },
          {
            "$ref": "../commons/commons.json#/components/parameters/limitParameter"
          },
          {
            "$ref": "#/components/parameters/typeParameter"
          },
          {
            "$ref": "#/components/parameters/usernameParameter"
          },
          {
            "$ref": "#/components/parameters/passwordParameter"
          },
          {
            "$ref": "#/components/parameters/jmsQueueParameter"
          },
          {
            "$ref": "#/components/parameters/hasPassedParameter"
          },
          {
            "$ref": "#/components/parameters/minRequestsParameter"
          },
          {
            "$ref": "#/components/parameters/maxRequestsParameter"
          },
          {
            "$ref": "#/components/parameters/studentFirstnameParameter"
          },
          {
            "$ref": "#/components/parameters/studentLastnameParameter"
          },
          {
            "$ref": "#/components/parameters/banksParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200s"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/teams/{uuid}": {
      "get": {
        "tags": [
          "Team"
        ],
        "operationId": "getTeamById",
        "summary": "Finds team by UUID",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "404": {
            "$ref": "../commons/commons.json#/components/responses/404"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      },
      "put": {
        "tags": [
          "Team"
        ],
        "operationId": "saveTeam",
        "summary": "Creates or updates a team",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          }
        ],
        "requestBody": {
          "$ref": "#/components/requestBodies/Team"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "404": {
            "$ref": "../commons/commons.json#/components/responses/404"
          },
          "409": {
            "$ref": "../commons/commons.json#/components/responses/409"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      },
      "delete": {
        "tags": [
          "Team"
        ],
        "operationId": "deleteTeamById",
        "summary": "Deletes a team",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          }
        ],
        "responses": {
          "204": {
            "$ref": "../commons/commons.json#/components/responses/204"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/teams/{uuid}/statistics": {
      "delete": {
        "tags": [
          "Team"
        ],
        "operationId": "resetStatistics",
        "summary": "Resets all team statistics to zero",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "404": {
            "$ref": "../commons/commons.json#/components/responses/404"
          },
          "409": {
            "$ref": "../commons/commons.json#/components/responses/409"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/teams/{uuid}/unique/username/{username}": {
      "get": {
        "tags": [
          "Team"
        ],
        "operationId": "isUsernameUnique",
        "summary": "Checks uniqueness of a username based on team id",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          },
          {
            "$ref": "#/components/parameters/usernamePath"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../commons/commons.json#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/teams/{uuid}/unique/password/{password}": {
      "get": {
        "tags": [
          "Team"
        ],
        "operationId": "isPasswordUnique",
        "summary": "Checks uniqueness of a password based on team id",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          },
          {
            "$ref": "#/components/parameters/passwordPath"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../commons/commons.json#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/teams/{uuid}/unique/jmsQueue/{jmsQueue}": {
      "get": {
        "tags": [
          "Team"
        ],
        "operationId": "isJmsQueueUnique",
        "summary": "Checks uniqueness of a jmsQueue based on team id",
        "parameters": [
          {
            "$ref": "#/components/parameters/uuidPath"
          },
          {
            "$ref": "#/components/parameters/jmsQueuePath"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../commons/commons.json#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "uuidPath": {
        "name": "uuid",
        "in": "path",
        "required": true,
        "style": "simple",
        "explode": false,
        "allowReserved": false,
        "example": "9426de16-95b9-4250-b22f-6d1d6d9b8d7e",
        "schema": {
          "type": "string",
          "format": "uuid",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        }
      },
      "usernamePath": {
        "name": "username",
        "in": "path",
        "required": true,
        "style": "simple",
        "explode": false,
        "allowReserved": false,
        "example": "Beispielteam",
        "schema": {
          "type": "string",
          "minLength": 6,
          "maxLength": 50
        }
      },
      "passwordPath": {
        "name": "password",
        "in": "path",
        "required": true,
        "style": "simple",
        "explode": false,
        "allowReserved": false,
        "example": "OOfKqWksmA",
        "schema": {
          "type": "string",
          "format": "password",
          "minLength": 8,
          "maxLength": 50
        }
      },
      "jmsQueuePath": {
        "name": "jmsQueue",
        "in": "path",
        "required": true,
        "style": "simple",
        "explode": false,
        "allowReserved": false,
        "example": "ResponseQueueBeispielteam",
        "schema": {
          "type": "string",
          "minLength": 6,
          "maxLength": 50
        }
      },
      "typeParameter": {
        "name": "type",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "example": "REGULAR",
        "schema": {
          "type": "string",
          "format": "enum"
        }
      },
      "usernameParameter": {
        "name": "username",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "example": "Team",
        "allowReserved": false,
        "schema": {
          "type": "string",
          "minLength": 1
        }
      },
      "passwordParameter": {
        "name": "password",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "schema": {
          "type": "string",
          "minLength": 1
        }
      },
      "jmsQueueParameter": {
        "name": "jmsQueue",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "example": "ResponseQueueTeam",
        "schema": {
          "type": "string",
          "minLength": 1
        }
      },
      "hasPassedParameter": {
        "name": "hasPassed",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "example": false,
        "schema": {
          "type": "boolean"
        }
      },
      "minRequestsParameter": {
        "name": "minRequests",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "example": 0,
        "schema": {
          "type": "integer",
          "format": "int64",
          "minimum": 0
        }
      },
      "maxRequestsParameter": {
        "name": "maxRequests",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "example": 9223372036854775807,
        "schema": {
          "type": "integer",
          "format": "int64",
          "minimum": 0
        }
      },
      "studentFirstnameParameter": {
        "name": "studentFirstname",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "schema": {
          "type": "string",
          "minLength": 1
        }
      },
      "studentLastnameParameter": {
        "name": "studentLastname",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": false,
        "allowReserved": false,
        "schema": {
          "type": "string",
          "minLength": 1
        }
      },
      "banksParameter": {
        "name": "banks",
        "in": "query",
        "required": false,
        "style": "form",
        "explode": true,
        "allowReserved": false,
        "example": [
          "Schufa",
          "Deutsche Bank",
          "Sparkasse",
          "PSD Bank",
          "Raiffeisen",
          "Volksbank",
          "Commerzbank"
        ],
        "schema": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 6,
            "maxLength": 50
          },
          "minItems": 0,
          "uniqueItems": true
        }
      }
    },
    "requestBodies": {
      "Team": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/team.json#/components/schemas/Team"
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Team",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/team.json#/components/schemas/Team"
            }
          }
        }
      },
      "200s": {
        "description": "Teams",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/team.json#/components/schemas/Teams"
            }
          }
        }
      }
    }
  }
}