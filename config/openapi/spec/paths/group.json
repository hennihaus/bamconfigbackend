{
  "openapi": "3.0.3",
  "info": {
    "title": "BAM Business Integration - Group API",
    "contact": {
      "name": "Jan-Hendrik Hausner",
      "email": "jan-hendrik.hausner@outlook.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://github.com/hennihaus/bamconfigbackend/blob/master/LICENSE"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/v1",
      "description": "Base-URL"
    }
  ],
  "tags": [
    {
      "name": "Group"
    }
  ],
  "paths": {
    "/groups": {
      "get": {
        "tags": [
          "Group"
        ],
        "operationId": "getAllGroups",
        "summary": "Gets all groups",
        "responses": {
          "200": {
            "$ref": "#/components/responses/200s"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/groups/{id}": {
      "get": {
        "tags": [
          "Group"
        ],
        "operationId": "getGroupById",
        "summary": "Finds group by id",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "404": {
            "$ref": "../commons/commons.json#/components/responses/404"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      },
      "put": {
        "tags": [
          "Group"
        ],
        "operationId": "saveGroup",
        "summary": "Creates or updates a group",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "requestBody": {
          "$ref": "#/components/requestBodies/Group"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      },
      "delete": {
        "tags": [
          "Group"
        ],
        "operationId": "deleteGroupById",
        "summary": "Deletes a group",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "204": {
            "$ref": "../commons/commons.json#/components/responses/204"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/groups/{id}/check/username/{username}": {
      "get": {
        "tags": [
          "Group"
        ],
        "operationId": "checkUsername",
        "summary": "Checks existence of a group based on username",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          },
          {
            "$ref": "#/components/parameters/username"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../commons/commons.json#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/groups/{id}/check/password/{password}": {
      "get": {
        "tags": [
          "Group"
        ],
        "operationId": "checkPassword",
        "summary": "Checks existence of a group based on password",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          },
          {
            "$ref": "#/components/parameters/password"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../commons/commons.json#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/groups/{id}/check/jmsQueue/{jmsQueue}": {
      "get": {
        "tags": [
          "Group"
        ],
        "operationId": "checkJmsQueue",
        "summary": "Checks existence of a group based on jmsQueue",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          },
          {
            "$ref": "#/components/parameters/jmsQueue"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../commons/commons.json#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    },
    "/groups/{id}/stats": {
      "delete": {
        "tags": [
          "Group"
        ],
        "operationId": "resetStats",
        "summary": "Resets all group stats to zero",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "../commons/commons.json#/components/responses/400"
          },
          "404": {
            "$ref": "../commons/commons.json#/components/responses/404"
          },
          "500": {
            "$ref": "../commons/commons.json#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "required": true,
        "example": "e7a259c7-44f1-472f-a869-f9c71f65a209",
        "schema": {
          "type": "string",
          "format": "uuid",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        }
      },
      "username": {
        "name": "username",
        "in": "path",
        "required": true,
        "example": "Beispielgruppe",
        "schema": {
          "type": "string",
          "minLength": 6,
          "maxLength": 50
        }
      },
      "password": {
        "name": "password",
        "in": "path",
        "required": true,
        "example": "OOfKqWksmA",
        "schema": {
          "type": "string",
          "format": "password",
          "minLength": 8,
          "maxLength": 50
        }
      },
      "jmsQueue": {
        "name": "jmsQueue",
        "in": "path",
        "required": true,
        "example": "ResponseLoanBrokerBeispielgruppe",
        "schema": {
          "type": "string",
          "minLength": 6,
          "maxLength": 50
        }
      }
    },
    "requestBodies": {
      "Group": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/group.json#/components/schemas/Group"
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Group",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/group.json#/components/schemas/Group"
            }
          }
        }
      },
      "200s": {
        "description": "Groups",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "title": "Groups",
              "items": {
                "$ref": "../schemas/group.json#/components/schemas/Group"
              },
              "minItems": 0,
              "uniqueItems": true
            }
          }
        }
      }
    }
  }
}