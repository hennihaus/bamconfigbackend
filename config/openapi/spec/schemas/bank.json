  "components": {
    "schemas": {
      "Bank": {
        "type": "object",
        "required": [
          "uuid",
          "name",
          "jmsQueue",
          "thumbnailUrl",
          "isAsync",
          "isActive",
          "teamsCount"
        ],
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
          },
          "name": {
            "type": "string",
            "minLength": 6,
            "maxLength": 50
          },
          "jmsQueue": {
            "type": "string",
            "minLength": 6,
            "maxLength": 50
          },
          "thumbnailUrl": {
            "type": "string",
            "format": "url",
            "pattern": "^(https?)://[-a-zA-Z0-9+&@#/%?=~_|!:,.;]*[-a-zA-Z0-9+&@#/%=~_|]"
          },
          "isAsync": {
            "type": "boolean"
          },
          "isActive": {
            "type": "boolean"
          },
          "creditConfiguration": {
            "$ref": "#/components/schemas/CreditConfiguration"
          },
          "teamsCount": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          }
        }
      },
      "CreditConfiguration": {
        "type": "object",
        "required": [
          "minAmountInEuros",
          "maxAmountInEuros",
          "minTermInMonths",
          "maxTermInMonths",
          "minSchufaRating",
          "maxSchufaRating"
        ],
        "properties": {
          "minAmountInEuros": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "maxAmountInEuros": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "minTermInMonths": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "maxTermInMonths": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "minSchufaRating": {
            "type": "string",
            "format": "enum",
            "minLength": 1,
            "maxLength": 1
          },
          "maxSchufaRating": {
            "type": "string",
            "format": "enum",
            "minLength": 1,
            "maxLength": 1
          }
        }
      }
    },
